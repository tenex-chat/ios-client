default_platform(:ios)

platform :ios do
  desc "Push a new release build to the App Store"
  lane :release_testflight do
    # setup_ci if you are using CI
    setup_ci

    # -------------------------------------------------------------------------
    # Code Signing (Match)
    # -------------------------------------------------------------------------
    # Use match for code signing with App Store Connect API Key
    # Certificates will be auto-generated on first run and stored in git repo
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      readonly: false,
      api_key: api_key
    )
    # -------------------------------------------------------------------------

    # Update code signing settings
    # Set all targets to use Distribution certificate
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "TENEX.xcodeproj",
      code_sign_identity: "Apple Distribution"
    )

    # Only the app target gets a provisioning profile (frameworks don't use them)
    update_code_signing_settings(
      use_automatic_signing: false,
      targets: ["TENEX"],
      path: "TENEX.xcodeproj",
      profile_name: "match AppStore chat.tenex.ios",
      code_sign_identity: "Apple Distribution"
    )

    # Build the app
    # We pass the build number (GitHub Run Number) via xcargs to avoid modifying generated files.
    # MARKETING_VERSION is set to 1.0.0 by default if not specified.
    # You can update this to fetch from a file or environment variable.
    build_app(
      scheme: "TENEX",
      export_method: "app-store",
      clean: true,
      include_symbols: true,
      destination: "generic/platform=iOS",
      xcargs: "CURRENT_PROJECT_VERSION=#{ENV["GITHUB_RUN_NUMBER"]} MARKETING_VERSION=1.0.0"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
